<resources>

    <style name="Theme.Mediathek" parent="@style/Holo.Theme.Light.DarkActionBar">
        <item name="actionBarItemBackground">@drawable/selectable_background_mediathek</item>

        <item name="dropDownListViewStyle">@style/DropDownListView.Mediathek</item>

        <item name="actionBarStyle">@style/ActionBar.Solid.Mediathek</item>
        <item name="actionModeBackground">@drawable/cab_background_top_mediathek</item>
        <item name="actionModeSplitBackground">@drawable/cab_background_bottom_mediathek</item>


                <!-- Light.DarkActionBar specific -->
        <item name="actionBarWidgetTheme">@style/Theme.Mediathek.Widget</item>

    </style>

    <style name="ActionBar.Solid.Mediathek" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="background">@drawable/ab_solid_mediathek</item>
        <item name="backgroundStacked">@drawable/ab_stacked_solid_mediathek</item>
        <item name="backgroundSplit">@drawable/ab_bottom_solid_mediathek</item>

    </style>

    <style name="ActionBar.Transparent.Mediathek" parent="@style/Widget.AppCompat.ActionBar">
        <item name="background">@drawable/ab_transparent_mediathek</item>
    </style>

    <style name="DropDownListView.Mediathek" parent="@style/Widget.AppCompat.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_mediathek</item>
    </style>

    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Mediathek.Widget" parent="@style/Theme.AppCompat">
        <item name="dropDownListViewStyle">@style/DropDownListView.Mediathek</item>
    </style>
    
    <style name="Theme.Mediathek.TransparentBackground">
          <item name="android:background">@color/semitransparentGrey</item>
        
    </style>
 
     

</resources>